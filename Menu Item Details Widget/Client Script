function($rootScope) {
	var c = this;
	  
	  /* Utility Method */
	  //////////////////////////////////////////////////
	  
	  function serverGet(action, payload) {
		  return c.server.get({
			  action: action,
			  payload: payload
		  });
	  }
	  
	  /* Hide the Modal when User Clicks Outside of the Modal or when user clicks cancel  */
	  //////////////////////////////////////////////////
	  
	  c.hide = function(event) {
		  if (event && event.target !== event.currentTarget) { return; }
		  c.visible = false;
	  };
	  
	  /* Adds an Item to the Cart */
	  c.addItemToCart = function() {
		  serverGet(c.data.actions.ADD_ITEM_TO_CART, c.item.id).then(function(res) {
			  c.hide();
		  });
	  };
	  
	  /* Open the Modal when Event is Captured */
	  //////////////////////////////////////////////////
	  
	  function showItemDetail(item) {
		  c.item = item.data;
		  c.visible = true;
	  }
	  
	  $rootScope.$on('K18_MenuItemClicked', function(event, item) {
		  showItemDetail(item);
	  });
	  
  }
