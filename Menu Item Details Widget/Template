<section class="menu-item-detail-root" ng-if="c.visible" ng-click="c.hide($event)">
  <section class="content rounded" ng-init="item = c.item">
    <figure>
      <figcaption class="rounded top" ng-bind="::item.name"></figcaption>
      <img class="rounded" ng-src="{{::item.image}}"/>
    </figure>
    <p ng-bind="::item.desc | sanitize"/>
    <footer class="rounded bottom" ng-if="c.options.hide_footer === 'false'">
      <div class="sec-text" ng-bind="::item.sec_text"/>
      <button class="btn btn-primary" ng-click="c.addItemToCart()">Add to cart</button>
      <button class="btn btn-default" ng-click="c.hide()">Cancel</button>
    </footer>
  </section>
</section>
